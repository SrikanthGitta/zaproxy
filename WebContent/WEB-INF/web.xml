<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" metadata-complete="true"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>ZapServlet</display-name>
    <servlet>
        <servlet-name>zap</servlet-name>
        <servlet-class>org.zaproxy.zap.ZapServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>zap</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>